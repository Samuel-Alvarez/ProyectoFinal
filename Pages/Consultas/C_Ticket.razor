@page "/Tickets"
@using Models
@attribute [Authorize]
@inject TicketBLL ticketBLL

<EditForm Model="this">
    <div class="card">

        <div class="card-header">
            <h4>Consulta de Tickets</h4>
        </div>
    </div>
    <div class="card-body">
        <form>
            <div class="input-group d-flex align-items-end">
            <select class="form-control col-2" @bind="Filtro">
            <option value="1">TicketId</option>
            <option value="2">Fecha</option>
            </select>

            <div class="flex-fill mx-2">
            <label>Criterio</label>
            <input type="text" class="form-control" @bind="Criterio" />
            </div>  
            </div> 
        </form>

     <button   @onclick="Buscar" class="btn btn-outline-primary" > <i class="oi oi-magnifying-glass"/> Buscar </button>
     </div>

    <table class="table table-striped table-hover mt-4" style="cursor: pointer;">

        <thead class="thead">
            <tr class="table">
                <th>TicketId</th>
                <th>Fecha</th>
                <th>Monto</th> 
            </tr>
        </thead>
         <tbody>

            @foreach (var ticket in tickets)
            {
                <tr>
                    <td>@ticket.TicketId</td> 
                    <td>@ticket.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@ticket.TotalMonto </td> 
                    <td><a class="btn btn-sm btn-outline-primary oi oi-eye" href="Ticket/@ticket.TicketId"></a></td> 
                </tr>
            }

        </tbody>
    </table>
</EditForm>

@code{
    public string? Filtro { get; set; }
    public string? Criterio { get; set; }
     public List<Ticket> tickets { get; set; } = new List<Ticket>();

    void Buscar()
    {
        tickets = ticketBLL.GetList();
    }
}